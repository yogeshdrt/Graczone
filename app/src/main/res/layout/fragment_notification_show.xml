<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notificationFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1C1B1B"
    android:orientation="vertical"
    android:clickable="true"
    tools:context=".ui.Notification.Notification_Fragment">

    <TextView
        android:id="@+id/date2TextView"
        android:layout_width="76dp"
        android:layout_height="33dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="49dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="48dp"
        android:background="#F3EBEB"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#0B0A0A"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/body2TextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/titleTextView" />

    <TextView
        android:id="@+id/time2TextView"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="101dp"
        android:background="#F8F4F4"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="78dp"
        android:layout_height="31dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="47dp"
        android:background="#F3ECEC"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#090909"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/body2TextView"
        android:layout_width="346dp"
        android:layout_height="178dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="35dp"
        android:background="#E8E3E3"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#121111"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleTextView" />

</LinearLayout>